<Window x:Class="rebar_settings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rebar_settings"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="DrawingCanvas" Margin="10">
            <!-- <Line X1="10" X2="200" Y1="0" Y2="0" StrokeThickness="4" Stroke="Black" StrokeEndLineCap="Round" StrokeStartLineCap="Round" /> -->
            <Thumb DragDelta="OnDragDelta" Canvas.Left="0" Canvas.Top="0">
                <Thumb.Template>
                    <ControlTemplate>
                        <!-- <Line X1="200" X2="200" Y1="0" Y2="70" StrokeThickness="4" Stroke="Black" StrokeEndLineCap="Round" StrokeStartLineCap="Round" /> -->
                        <Ellipse Width="10" Height="10" Stroke="Red" Fill="Red"></Ellipse>
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>
        </Canvas>
    </Grid>
</Window>